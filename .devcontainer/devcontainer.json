{
  "name": "Go and HTMX Development",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go", // Go extension which includes the Go language server (gopls)
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ritwickdey.LiveServer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash"
          }
        },
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },
        "eslint.alwaysShowStatus": true,
        "prettier.enable": true,
        "emmet.triggerExpansionOnTab": true,
        "emmet.showExpandedAbbreviation": "never",
        "emmet.useInlineCompletions": false,
        "emmet.showSuggestionsAsSnippets": true,
        "emmet.syntaxProfiles": {
          "html": {
            "inline_break": 1
          },
          "jsx:": {
            "inline_break": 1
          }
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "html": "html"
        }
      }
    }
  },
  "postCreateCommand": "go mod tidy && go install github.com/cosmtrek/air@latest && go install golang.org/x/tools/gopls@latest && curl -fsSL https://deb.nodesource.com/setup_14.x | sudo -E bash - && sudo apt-get install -y nodejs && npm install -g browser-sync",
  "features": {
    "github-cli": "latest"
  }
}
